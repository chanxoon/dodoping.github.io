{
  "name": "github-pages-site",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "live-server src",
    "scss:watch": "sass --watch src/assets/scss:src/assets/css",
    "dev": "npm-run-all --parallel scss:watch start",

    "clean": "rimraf dist",
    "scss:build": "sass src/assets/scss/style.scss dist/assets/css/style.css --style=compressed",
    "copy:html": "copyfiles -u 1 \"src/**/*.html\" dist",
    "copy:js": "copyfiles -u 2 \"src/assets/js/**/*.js\" dist/assets/js",
    "copy:include": "copyfiles -u 1 \"src/include/**/*\" dist/include",
    "build": "npm run clean && npm run copy:html && npm run copy:js && npm run copy:include && npm run scss:build"
  },
  "devDependencies": {
    "sass": "^1.69.0",
    "live-server": "^1.2.2",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.10",
    "npm-run-all": "^4.1.5"
  }
}
