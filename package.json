{
  "name": "portfolio",
  "version": "1.0.0",
  "scripts": {
    "start": "live-server src",
    "scss:watch": "sass --watch src/assets/scss:assets/css",
    "dev": "npm-run-all --parallel scss:watch start",
    
    "scss:build": "sass src/assets/scss/style.scss assets/css/style.css --style=compressed",
    "copy:all": "copyfiles -u 1 \"src/**/*\" .",
    "build": "npm run copy:all && npm run scss:build"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "sass": "^1.69.0"
  }
}
