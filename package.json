{
  "name": "portfolio",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "live-server src",
    "scss:watch": "sass --watch src/assets/scss:src/assets/css",
    "dev": "npm-run-all --parallel scss:watch start",
    "clean": "rimraf dist",
    "scss:build": "sass src/assets/scss/style.scss dist/assets/css/style.css --style=compressed",
    "copy:html": "copyfiles -u 1 \"src/index.html\" dist",
    "copy:include": "copyfiles -u 2 \"src/include/**/*\" dist/include",
    "copy:assets": "copyfiles -u 2 \"src/assets/**/*\" dist/assets",
    "copy:projects": "copyfiles -u 1 \"src/projects.json\" dist",
    "build": "npm run clean && npm run copy:html && npm run copy:include && npm run copy:assets && npm run copy:projects && npm run scss:build",
    "deploy": "npm run build && gh-pages -d dist"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "gh-pages": "^6.3.0",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.10",
    "sass": "^1.69.0"
  }
} 
